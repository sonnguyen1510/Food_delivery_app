@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    public static String ActiveColor = "#38cfcc";
    public static String InactiveColor = "#9e9e9e";

    // Add any necessary code-behind logic here
    public String HomeStatus = ActiveColor;
    public String UserStatus = InactiveColor;
    public String AnalysisStatus = InactiveColor;


    public void RouteToHome()
    {
        HomeStatus = ActiveColor;
        UserStatus = InactiveColor;
        AnalysisStatus = InactiveColor;
        NavigationManager.NavigateTo("/");
    }

    public void RouteToAnalysis()
    {
        HomeStatus = InactiveColor;
        UserStatus = InactiveColor;
        AnalysisStatus = ActiveColor;
        NavigationManager.NavigateTo("/Analysis");
    }

    public void RouteToUser()
    {
        HomeStatus = InactiveColor;
        UserStatus = ActiveColor;
        AnalysisStatus = InactiveColor;
        NavigationManager.NavigateTo("/User");
    }
