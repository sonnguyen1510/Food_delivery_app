    private IEnumerable<DateTime> GetOrderedDays(DateTime startDate)
    {
        var days = new List<DateTime>();
        while (startDate.DayOfWeek != DayOfWeek.Monday)
        {
            startDate = startDate.AddDays(-1);
        }

        for (int i = 0; i < 7; i++)
