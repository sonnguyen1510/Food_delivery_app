                                @for (int i = 0; i < 24; i++)
                                {
                                    <option value="@i">@i.ToString("00")</option>
                                }
                            </select>
                            <p class="modal-daypicker-timepicker-sepreate-time">:</p>
                            <select @bind="selectedMinute" class="minute">
